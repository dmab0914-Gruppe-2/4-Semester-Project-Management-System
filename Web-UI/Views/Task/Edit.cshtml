        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="submit" value="Save" class="btn btn-default" />*@
            </div>
        </div>
    <div>
        @Html.ActionLink("Back", "Details", new { id = Model.Id }, new { @class = "btn btn-primary" }) | <input type="submit" value="Save" class="btn btn-default" />
    </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

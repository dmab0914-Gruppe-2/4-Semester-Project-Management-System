@model Web_UI.Models.VMTask

@{
    ViewBag.Title = "Details";
}



<div class="col-md-12 detailView">
    <h2>@Html.DisplayFor(model => model.Title)</h2>
    <p>@Html.DisplayFor(model => model.Id)</p>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description):
        </dt>

        <dd>
            @Html.TextArea("Description", Model.Description, new { @readonly = "readonly", @class="DetailDescTxt"})
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status):
        </dt>

        <dd>
            @Html.EnumDropDownListFor(model => model.Status, new { disabled = "true" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Priority):
        </dt>

        <dd>
            @Html.EnumDropDownListFor(model => model.Priority, new { disabled = "true" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedDate):
            <br />
            
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DueDate):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DueDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastChangedDate):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastChangedDate)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Back to List", "Index")
</p>
